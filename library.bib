journal = {Remote Sensing of Environment},
keywords = {Biomass,Carbon,Crown delineation,Forest,Individual tree structure,Lidar},
pages = {102--112},
publisher = {Elsevier Inc.},
title = {{The importance of spatial detail: Assessing the utility of individual crown information and scaling approaches for lidar-based biomass density estimation}},

doi = {10.1016/j.agrformet.2015.01.009},
file = {:C$\backslash$:/Users/jollyb/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Calders et al. - 2015 - Monitoring spring phenology with high temporal resolution terrestrial LiDAR measurements.pdf:pdf},
isbn = {0168-1923},
issn = {01681923},
journal = {Agricultural and Forest Meteorology},
keywords = {PAI,Phenology,Terrestrial LiDAR,Vegetation structure,Vertical plant profiles},
pages = {158--168},
publisher = {Elsevier B.V.},

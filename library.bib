file = {:C$\backslash$:/Users/jollyb/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Calders et al. - 2014 - Implications of sensor configuration and topography on vertical plant profiles derived from terrestrial LiDAR.pdf:pdf},
isbn = {01681923},

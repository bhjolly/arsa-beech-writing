doi = {10.5194/bg-14-3371-2017},
file = {:C$\backslash$:/Users/jollyb/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Nunes, Davey, Coomes - 2017 - On the challenges of using field spectroscopy to measure the impact of soil type on leaf traits.pdf:pdf},
issn = {17264189},
journal = {Biogeosciences},

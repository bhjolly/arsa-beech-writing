issn = {01681923},
journal = {Agricultural and Forest Meteorology},
keywords = {3D canopy model,Forest canopy,Gap fraction,Terrestrial laser scanner},
pages = {230--240},
publisher = {Elsevier B.V.},
title = {{Effects of voxel size and sampling setup on the estimation of forest canopy gap fraction from terrestrial laser scanning data}},
url = {http://dx.doi.org/10.1016/j.agrformet.2014.04.013},

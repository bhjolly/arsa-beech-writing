issn = {18791026},
journal = {Science of the Total Environment},
keywords = {APSIM,Dispersion-diffusion,HYDRUS,Pastoral systems,Pasture yield,Sensitivity analysis},
title = {{Lateral spread affects nitrogen leaching from urine patches}},

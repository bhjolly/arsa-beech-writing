file = {:C$\backslash$:/Users/jollyb/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Bosse, Zlot - 2009 - Keypoint design and evaluation for place recognition in 2D lidar maps.pdf:pdf},
isbn = {0921-8890},
issn = {09218890},
journal = {Robotics and Autonomous Systems},
keywords = {Data association,Dimension reduction,Localization,Mapping,Place recognition,Regional point descriptor,SLAM},
number = {12},
pages = {1211--1224},
title = {{Keypoint design and evaluation for place recognition in 2D lidar maps}},
volume = {57},

file = {:C$\backslash$:/Users/jollyb/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Watt et al. - 2013 - The influence of LiDAR pulse density and plot size on the accuracy of New Zealand plantation stand volume equations.pdf:pdf},
issn = {00480134},
journal = {New Zealand Journal of Forestry Science},
keywords = {ALS,Airborne laser scanning,Forest inventory,Laser,LiDAR,Pinus radiata},
